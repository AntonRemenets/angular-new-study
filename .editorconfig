root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,jsx,ts,tsx}]
quote_type = single
arrow_parens = avoid
bracket_spacing = true
jsx_quote_type = single
jsx_bracket_same_line = false
semi = false
trailing_comma = all

[*.html]
html_whitespace_sensitivity = css

[*.md]
prose_wrap = always
trim_trailing_whitespace = false
